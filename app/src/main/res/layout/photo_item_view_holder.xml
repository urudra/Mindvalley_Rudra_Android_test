<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/photo_item_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4081"
            android:fitsSystemWindows="true"
            android:minHeight="125dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/photo_item_user_image_view"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|left"
            app:srcCompat="@drawable/user_men" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/photo_item_user_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/photo_item_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/photo_item_horizontal_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/horizontal_line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/photo_item_categories_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>